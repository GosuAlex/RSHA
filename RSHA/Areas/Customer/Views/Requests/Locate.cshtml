@model IEnumerable<RSHA.Models.Mechanics>
@{
    ViewData["Title"] = "Locate Mechanic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="GET">
    <br />  <br />
    <h2 class="text-info">Mechanic Locations</h2>
    <br />

    <div style="height:150px; background-color:aliceblue" class="container">
        <div class="col-12">
            <div class="row" style="padding-top:10px;">
                <div class="col-sm-2">
                    Mechanic Name
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-2">
                </div>
                <div class="col-sm-2">
                    State
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchState", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="row" style="padding-top:10px;">
                <div class="col-sm-2">
                    City
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchCity", new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-2">
                </div>
                <div class="col-sm-2">
                    Postal Code
                </div>
                <div class="col-sm-3">
                    @Html.Editor("searchPostalCode", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="row" style="padding-top:10px;">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-3">
                </div>
                <div class="col-2">
                </div>
                <div class="col-sm-2">
                </div>
                <div class="col-sm-3">
                    <button type="submit" name="submit" value="Search" class="btn btn-primary form-control">
                        <i class="fas fa-search"></i>&nbsp;&nbsp;Search
                    </button>
                </div>
            </div>
        </div>
    </div>
    <br />  <br />

    <div>
        <table class="table table-striped border">
            <tr class="table-info">
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.State)</th>
                <th>@Html.DisplayNameFor(m => m.City)</th>
                <th>@Html.DisplayNameFor(m => m.PostalCode)</th>
                <th>@Html.DisplayNameFor(m => m.Street)</th>
                <th>    </th>
                <th>    </th>
                <th>    </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.State)</td>
                    <td>@Html.DisplayFor(m => item.City)</td>
                    <td>@Html.DisplayFor(m => item.PostalCode)</td>
                    <td>@Html.DisplayFor(m => item.Street)</td>
                    <td>    </td>
                    <td><partial name="_SendRequestToButtonPartial" model="item.Id" /></td>
                </tr>
            }
        </table>
    </div>
</form>

@section Scripts{

}