@model RSHA.Models.Requests
@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Delete Request</h2>


<form method="POST" asp-action="Delete">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Id"></label>
            </div>
            <div class="col-5">
                <input asp-for="Id" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Location"></label>
            </div>
            <div class="col-5">
                <input asp-for="Location" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProblemId"></label>
            </div>
            <div class="col-5">
                <input asp-for="ProblemId" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Message"></label>
            </div>
            <div class="col-5">
                <input asp-for="Message" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RequestScheduledDate"></label>
            </div>
            <div class="col-5">
                <input asp-for="RequestScheduledDate" disabled class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.Id" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
