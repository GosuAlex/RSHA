@*@model IEnumerable<RSHA.Models.Feedbacks>*@
@model RSHA.Models.Feedbacks
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="bg-fixed">

    <br /><br />
          <div class="container bg-table border border-dark text-normal">
              <br /><br />
              <h2 class="text-info">Feedback Overview & Submission</h2> <br />

              <br />
              <div class="">

                  <form method="POST">
                      <div class="p-4 border rounded">
                          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                          <div class="form-group">
                              <div class="">
                                  <h4>Send feedback to administrator</h4>
                                  <label asp-for="Message"></label>
                              </div>
                              <div class="">
                                  <input asp-for="Message" class="form-control" />
                              </div>
                              <span asp-validation-for="Message" class="text-danger"></span>
                          </div>
                      </div>
                      <div asp-validation-summary="All" class="text-danger"></div>
                      <br />
                      <div class="form-group">
                          <input type="submit" class="btn btn-sub btn-sub-primary" value="Send" />
                          <a asp-controller="Feedback" asp-action="Index" class="btn btn-sub btn-sub-success">Back</a>
                      </div>
                  </form>

              </div>
              <div class="col-12">
                  <table class="tableme" style="width: 97% ;">
                      <tr class="thead">
                          <th class="col-4">
                              @*@Html.DisplayNameFor(m => m.FeedbackCreated)*@
                              Message time
                          </th>
                          <th>
                              @Html.DisplayNameFor(m => m.Message)
                          </th>
                      </tr>

                      @foreach (var item in Model)
                      {
                          <tr class="tbody @{if (item.SenderName == User.Identity.Name)
                            { <text>bg-successme</text> }
                                else {<text>bg-secondaryme</text>} } ">
                              <td>
                                  @Html.DisplayFor(m => item.FeedbackCreated)
                              </td>
                              <td>
                                  @Html.DisplayFor(m => item.Message)
                              </td>
                          </tr>
                      }
                  </table>
              </div>

          </div>
</div>
<br /><br />

</header>